{
  "widgetname": "countdown",
  "defaults": {
    "heading": "Countdown heading",
    "layoutNote": "Layout placeholder",
    "typographyNote": "Typography placeholder",
    "appearanceNote": "Appearance placeholder",
    "settingsNote": "Settings placeholder",
    "stage": {
      "background": "var(--color-system-gray-5)"
    },
    "pod": {
      "background": "var(--color-system-white)"
    }
  },
  "html": [
    "<bob-panel id='content'>",
    "  <div class=\"diet-textfield\" data-size=\"md\">",
    "    <div class=\"diet-textfield__control\">",
    "      <label class=\"diet-textfield__display-label label-s\">Countdown heading</label>",
    "      <input",
    "        class=\"diet-textfield__field\"",
    "        type=\"text\"",
    "        aria-label=\"Countdown heading\"",
    "        placeholder=\"Countdown heading\"",
    "        data-bob-path=\"heading\"",
    "      />",
    "    </div>",
    "  </div>",
    "</bob-panel>",
    "<bob-panel id='layout'>",
    "  <div class=\"diet-textfield\" data-size=\"md\">",
    "    <div class=\"diet-textfield__control\">",
    "      <label class=\"diet-textfield__display-label label-s\">Layout placeholder</label>",
    "      <input",
    "        class=\"diet-textfield__field\"",
    "        type=\"text\"",
    "        aria-label=\"Layout placeholder\"",
    "        placeholder=\"Layout placeholder\"",
    "        data-bob-path=\"layoutNote\"",
    "      />",
    "    </div>",
    "  </div>",
    "</bob-panel>",
    "<bob-panel id='typography'>",
    "  <div class=\"diet-textfield\" data-size=\"md\">",
    "    <div class=\"diet-textfield__control\">",
    "      <label class=\"diet-textfield__display-label label-s\">Typography placeholder</label>",
    "      <input",
    "        class=\"diet-textfield__field\"",
    "        type=\"text\"",
    "        aria-label=\"Typography placeholder\"",
    "        placeholder=\"Typography placeholder\"",
    "        data-bob-path=\"typographyNote\"",
    "      />",
    "    </div>",
    "  </div>",
    "</bob-panel>",
    "<bob-panel id='appearance'>",
    "  <tooldrawer-field type='dropdown-fill' size='md' path='stage.background' label='Stage fill' placeholder='Select a fill' />",
    "  <tooldrawer-field type='dropdown-fill' size='md' path='pod.background' label='Widget fill' placeholder='Select a fill' />",
    "</bob-panel>",
    "<bob-panel id='settings'>",
    "  <div class=\"diet-textfield\" data-size=\"md\">",
    "    <div class=\"diet-textfield__control\">",
    "      <label class=\"diet-textfield__display-label label-s\">Settings placeholder</label>",
    "      <input",
    "        class=\"diet-textfield__field\"",
    "        type=\"text\"",
    "        aria-label=\"Settings placeholder\"",
    "        placeholder=\"Settings placeholder\"",
    "        data-bob-path=\"settingsNote\"",
    "      />",
    "    </div>",
    "  </div>",
    "</bob-panel>"
  ]
}
