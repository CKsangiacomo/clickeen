{
  "component": "dropdown-actions",
  "syntax": "<tooldrawer-field type='dropdown-actions' size='{{SIZE}}' path='{{PATH}}' label='{{LABEL}}' placeholder='{{PLACEHOLDER}}' value='{{VALUE}}' />",
  "attributes": {
    "size": { "enum": ["sm", "md", "lg"], "default": "md" },
    "path": { "optional": true },
    "label": { "optional": true },
    "headerLabel": { "optional": true },
    "headerIcon": { "optional": true },
    "placeholder": { "optional": true, "default": "Hint text" },
    "value": { "optional": true }
  },
  "binding": { "path": "instanceData[PATH]", "type": "string" },
  "defaults": [
    {
      "id": "dropdown-actions",
      "sizes": ["sm", "md", "lg"],
      "spec": ["diet-dropdown-actions", "data-size='{{size}}'"],
      "context": {
        "size": "md",
        "id": "dropdown-actions-{{size}}",
        "label": "Label",
        "placeholder": "Select a color",
        "value": "value-one",
        "path": "",
        "popoverLabel": "Color options",
        "labelClass": "label-s",
        "bodyClass": "body-s",
        "headerLabel": "Label",
        "headerIcon": "textformat.size.larger",
        "headerLabelClass": "label-s",
        "options": [
          { "label": "Value one", "value": "value-one", "selected": true },
          { "label": "Value two", "value": "value-two" },
          { "label": "Value three", "value": "value-three" }
        ]
      },
      "sizeContext": {
        "sm": { "labelClass": "label-xs", "bodyClass": "body-xs" },
        "md": { "labelClass": "label-s", "bodyClass": "body-s" },
        "lg": { "labelClass": "label-m", "bodyClass": "body-m" }
      }
    }
  ]
}
