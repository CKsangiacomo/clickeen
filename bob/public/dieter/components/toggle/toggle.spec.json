{
  "component": "toggle",
  "syntax": "<tooldrawer-field type='toggle' label='{{LABEL}}' size='{{SIZE}}' path='{{PATH}}' />",
  "attributes": {
    "type": { "fixed": "toggle" },
    "label": { "required": true },
    "size": { "enum": ["sm", "md", "lg"], "default": "md" },
    "path": { "required": true }
  },
  "binding": { "path": "instanceData[PATH]", "type": "boolean" },
  "defaults": [
    {
      "id": "toggle",
      "sizes": ["sm", "md", "lg"],
      "spec": ["diet-toggle", "data-size='{{size}}'"],
      "context": {
        "size": "md",
        "label": "Label",
        "id": "toggle-{{size}}",
        "path": "",
        "checkedAttr": " checked"
      }
    }
  ]
}
