{
  "component": "dropdown-edit",
  "syntax": "<diet-dropdown-edit label='{{LABEL}}' value='{{VALUE}}' placeholder='{{PLACEHOLDER}}' body='{{BODY}}' size='{{SIZE}}' />",
  "attributes": {
    "label": { "required": true },
    "value": { "optional": true },
    "placeholder": { "default": "Select value" },
    "body": { "default": "Place editing controls inside this popover." },
    "size": { "enum": ["md", "lg"], "default": "md" }
  },
  "previews": [
    {
      "id": "dropdown-edit-md",
      "spec": ["diet-dropdown-edit", "data-size='md'"],
      "context": {
        "label": "Button style",
        "value": "",
        "placeholder": "Select style",
        "body": "Use this popover to edit text or settings.",
        "size": "md"
      }
    },
    {
      "id": "dropdown-edit-lg",
      "spec": ["diet-dropdown-edit", "data-size='lg'"],
      "context": {
        "label": "Layout",
        "value": "Compact",
        "placeholder": "Select layout",
        "body": "Second example copy.",
        "size": "lg"
      }
    }
  ]
}
