{
  "component": "textfield",
  "syntax": "<tooldrawer-field type='textfield' size='{{SIZE}}' path='{{PATH}}' label='{{LABEL}}' placeholder='{{PLACEHOLDER}}' value='{{VALUE}}' />",
  "attributes": {
    "size": { "enum": ["sm", "md", "lg"], "default": "md" },
    "path": { "required": true },
    "label": { "optional": true },
    "placeholder": { "optional": true },
    "value": { "optional": true },
    "show-if": { "optional": true },
    "show-when": { "optional": true }
  },
  "binding": { "path": "instanceData[PATH]", "type": "string" },
  "defaults": [
    {
      "id": "textfield",
      "sizes": ["sm", "md", "lg"],
      "spec": ["diet-textfield", "data-size='{{size}}'"],
      "context": {
        "size": "md",
        "id": "textfield-{{size}}",
        "label": "Label",
        "placeholder": "Hint text",
        "value": "",
        "path": ""
      }
    }
  ]
}
