---
import Base from '../../../../layouts/Base.astro';
import Nav from '../../../../blocks/site/nav/Nav.astro';
import Footer from '../../../../blocks/site/footer.astro';
import Minibob from '../../../../blocks/site/minibob.astro';
import Hero from '../../../../blocks/widget-landing/hero.astro';
import Steps from '../../../../blocks/widget-landing/steps.astro';
import Features from '../../../../blocks/widget-landing/features.astro';
import Cta from '../../../../blocks/widget-landing/cta.astro';
import { listPragueLocales } from '../../../../lib/locales';

const { locale } = Astro.params;

export function getStaticPaths() {
  return listPragueLocales().map((locale) => ({ params: { locale } }));
}
---

<Base title="Landing Playground — Prague" locale={locale}>
  <main>
    <Nav
      title="Clickeen"
      locale={locale}
      homeHref={`/${locale}/`}
      cta={{ label: 'Create free', href: `/${locale}/create`, variant: 'primary' }}
    />
    <Hero
      headline="Accordion FAQ widget for website"
      subheadline="Answer questions before they're asked. Reduce support tickets. Boost SEO."
      primaryCta={{ label: 'Create free', href: `/${locale}/create` }}
      secondaryCta={{ label: 'See templates', href: `/${locale}/templates` }}
    />
    <Minibob
      widget="faq"
      locale={locale}
      heading="Try it live"
      subhead="Edit a demo instance in Minibob. Publish when you’re ready."
    />
    <Steps steps={[
      { title: 'Pick a template', body: 'Start from a proven layout and structure.' },
      { title: 'Customize with AI', body: 'Rewrite copy and styling for your business in minutes.' },
      { title: 'Embed anywhere', body: 'Drop the snippet into any site or platform.' },
    ]} />
    <Features items={[
      { title: 'SEO-friendly', body: 'Semantic HTML + schema when enabled.' },
      { title: 'Fast', body: 'Edge-cached, minimal JS.' },
      { title: 'Localized', body: 'Same page + same instance, localized by locale.' },
    ]} />
    <Cta
      headline="Create your FAQ widget"
      subheadline="Start free. Publish when you’re ready."
      primaryLabel="Create free"
      primaryHref="/"
    />
    <Footer locale={locale} />
  </main>
</Base>
