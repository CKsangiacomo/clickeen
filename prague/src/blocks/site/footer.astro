---
type Props = {
  locale: string;
};

const { locale } = Astro.props;
---

<footer class="ck-canvas ck-footerCanvas">
  <div class="ck-inline ck-stack ck-footer">
    <div class="ck-row ck-footer__row">
      <div class="label-m">Clickeen</div>
      <div class="ck-row ck-footer__links">
        <a class="label-s ck-footer__link" href={`/${locale}/pricing`}>Pricing</a>
        <a class="label-s ck-footer__link" href={`/${locale}/widgets/faq`}>Widgets</a>
      </div>
    </div>
    <div class="caption">Â© {new Date().getFullYear()} Clickeen. All rights reserved.</div>
  </div>
