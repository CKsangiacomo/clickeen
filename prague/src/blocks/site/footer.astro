<style>
  .ck-footerCanvas { padding-block: var(--space-10); }

  .ck-footer { gap: var(--space-6); }

  .ck-footer__row {
    justify-content: space-between;
    gap: var(--space-6);
  }

  .ck-footer__links { gap: var(--space-5); }

