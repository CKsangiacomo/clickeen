---
import CuratedInstanceEmbed from '../../components/CuratedInstanceEmbed.astro';

type Props = {
  headline: string;
  subheadline?: string;
  primaryCta: { label: string; href: string };
  secondaryCta?: { label: string; href: string };
  curatedRef?: {
    publicId: string;
    locale: string;
    height?: string;
    title?: string;
  };
};

const { headline, subheadline, primaryCta, secondaryCta, curatedRef } = Astro.props;
---

<section class="ck-canvas ck-heroCanvas">
  <div class="ck-inline">
    <div class="ck-hero__subnav">
      <slot name="subnav" />
    </div>
    <div class="ck-split ck-split--center ck-split--hero">
      <div class="ck-split__a ck-stack">
        <h1 class="display-2 ck-hero__title">{headline}</h1>
        {subheadline ? <p class="body-website ck-hero__subheadline">{subheadline}</p> : null}
        <div class="ck-row">
          <a class="ck-btn ck-btn--primary ck-btn--lg label-l" href={primaryCta.href}>{primaryCta.label}</a>
          {secondaryCta ? (
            <a class="ck-btn ck-btn--secondary ck-btn--lg label-l" href={secondaryCta.href}>{secondaryCta.label}</a>
          ) : null}
        </div>
      </div>
      <div class="ck-split__b" aria-hidden="true">
        {curatedRef ? (
          <CuratedInstanceEmbed
            publicId={curatedRef.publicId}
            locale={curatedRef.locale}
            height={curatedRef.height ?? '360px'}
            title={curatedRef.title ?? 'Widget preview'}
          />
        ) : (
          <div class="ck-media ck-heroPreview">Live widget preview (stub)</div>
        )}
      </div>
    </div>
  </div>
</section>

<style>
  .ck-heroCanvas {
    /* Tokenized “gray 5.5” in our ladder corresponds to gray-5 step5. */
      background: var(--color-system-gray-5-step4);
    /* When the global nav is in overlay mode, keep hero content readable while
       allowing the background to extend under the nav. */
    padding-top: var(--ck-siteNav-h, 0px);
  }

  .ck-hero__subnav {
    margin-bottom: var(--space-7);
  }
  .ck-hero__subnav:empty { display: none; }

  .ck-hero__title { margin: 0; }
  .ck-hero__subheadline { margin: 0; }

  .ck-heroPreview {
    width: 100%;
    min-height: 280px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: color-mix(in oklab, var(--color-system-black), transparent 56%);
  }

  @media (max-width: 900px) {
    .ck-heroPreview { min-height: 220px; }
  }
</style>
