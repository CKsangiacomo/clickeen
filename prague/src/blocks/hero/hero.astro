---
import {
  actionGroupFromLegacy,
  actionGroupToPrimitives,
  assertPrimitives,
  type ActionGroup,
} from '@clickeen/composition';
import PrimitiveRenderer from '@clickeen/composition/renderers/astro/PrimitiveRenderer.astro';
import InstanceEmbed from '../../components/InstanceEmbed.astro';
import PersonalizationPreview from '../../components/PersonalizationPreview.astro';

type Props = {
  headline: string;
  subheadline?: string;
  primaryCta: { label: string; href: string };
  secondaryCta?: { label: string; href: string };
  actionGroup?: ActionGroup;
  curatedRef?: {
    publicId: string;
    locale: string;
    title?: string;
  };
  personalization?: { widget: string; page: string; locale: string };
};

const { headline, subheadline, primaryCta, secondaryCta, actionGroup, curatedRef, personalization } = Astro.props;

const resolvedActionGroup =
  actionGroup ??
  actionGroupFromLegacy(primaryCta, secondaryCta, {
    layout: 'row',
    className: 'ck-row',
    primaryClassName: 'ck-btn--lg label-l',
    secondaryClassName: 'ck-btn--lg label-l',
    primaryAttrs: { 'data-ck-copy': 'ctaText' },
  });

const headerPrimitives = assertPrimitives(
  [
    {
      type: 'heading',
      level: 1,
      content: headline,
      className: 'display-2 ck-hero__title ck-m0',
      attrs: { 'data-ck-copy': 'heroTitle' },
    },
    ...(subheadline
      ? [
          {
            type: 'text',
            variant: 'body',
            content: subheadline,
            className: 'body-website ck-hero__subheadline ck-m0',
            attrs: { 'data-ck-copy': 'heroSubtitle' },
          },
        ]
      : []),
  ],
  'hero.header',
);
---

<section class="ck-canvas ck-heroCanvas">
  <div class="ck-inline">
    <div class="ck-hero__subnav">
      <slot name="subnav" />
    </div>
    <div class="ck-split ck-split--center ck-split--hero">
      <div class="ck-split__a">
        <div class="ck-hero__content ck-stack ck-gap-loose">
          <div class="ck-hero__copy ck-stack ck-gap-tight">
            <PrimitiveRenderer primitives={headerPrimitives} />
          </div>
          {resolvedActionGroup ? (
            <div class="ck-hero__cta">
              <PrimitiveRenderer primitives={[actionGroupToPrimitives(resolvedActionGroup)]} />
            </div>
          ) : null}
        </div>
        {personalization ? (
          <PersonalizationPreview
            locale={personalization.locale}
            widget={personalization.widget}
            page={personalization.page}
          />
        ) : null}
      </div>
      <div class="ck-split__b" aria-hidden="true">
        {curatedRef ? (
          <InstanceEmbed
            publicId={curatedRef.publicId}
            locale={curatedRef.locale}
            title={curatedRef.title ?? 'Widget preview'}
            loading="eager"
          />
        ) : (
          <div class="ck-media ck-heroPreview">Live widget preview (stub)</div>
        )}
      </div>
    </div>
  </div>
</section>

<style>
  .ck-heroCanvas {
    /* Tokenized “gray 5.5” in our ladder corresponds to gray-5 step5. */
      background: var(--color-system-gray-5-step4);
    /* When the global nav is in overlay mode, keep hero content readable while
       allowing the background to extend under the nav. */
    padding-top: var(--ck-siteNav-h, 0px);
  }

  .ck-hero__subnav {
    margin-bottom: var(--space-7);
  }
  .ck-hero__subnav:empty { display: none; }

  .ck-hero__title { margin: 0 !important; }
  .ck-hero__subheadline { margin: 0 !important; }

  .ck-heroPreview {
    width: 100%;
    min-height: 280px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: color-mix(in oklab, var(--color-system-black), transparent 56%);
  }

  @media (max-width: 900px) {
    .ck-heroPreview { min-height: 220px; }
  }
</style>
