---
type Props = {
  headline: string;
  subheadline?: string;
  primaryCta?: {
    label: string;
    href: string;
  };
};

const { headline, subheadline, primaryCta } = Astro.props;
---

<section class="ck-canvas">
  <div class="ck-inline">
    <div class="ck-cta__card">
      <div class="ck-split ck-split--center">
        <div class="ck-split__a ck-stack">
          <div class="display-2 ck-m0">{headline}</div>
          {subheadline ? <div class="body-website ck-m0 ck-text-subtle">{subheadline}</div> : null}
        </div>
        {primaryCta ? (
          <div class="ck-split__b">
            <a class="ck-btn ck-btn--primary ck-btn--lg label-l" href={primaryCta.href} data-ck-copy="ctaText">
              {primaryCta.label}
            </a>
          </div>
        ) : null}
      </div>
    </div>
  </div>
</section>

<style>
  .ck-cta__card {
    background: var(--color-system-white);
    border-radius: var(--control-radius-4xl);
    border: 1px solid color-mix(in oklab, var(--color-system-black), transparent 88%);
    box-shadow: var(--shadow-elevated);
    padding: var(--space-8);
  }
</style>
