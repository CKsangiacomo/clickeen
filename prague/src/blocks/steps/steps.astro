---
import StepsPrimitive from '../../components/StepsPrimitive.astro';

type StepItem = {
  title: string;
  body: string;
  iconEnabled?: boolean;
  iconName?: string;
  icon?: string;
  backgroundEnabled?: boolean;
  backgroundPath?: string;
  background?: string;
  imageEnabled?: boolean;
  imagePath?: string;
  image?: string;
  imageAlt?: string;
  imageLayout?: 'inset' | 'bleed';
  imageFit?: 'cover' | 'contain';
  imagePositionY?: 'top' | 'center' | 'bottom';
};

type Props = {
  widget: string;
  title: string;
  subhead?: string;
  steps: StepItem[];
  visual?: { image?: string };
  ctaHref?: string;
};

const { widget, title, subhead, steps, visual, ctaHref } = Astro.props as Props;
---

<StepsPrimitive
  widget={widget}
  title={title}
  subhead={subhead}
  steps={steps}
  visual={visual}
  ctaHref={ctaHref}
  variant="value-props"
/>
