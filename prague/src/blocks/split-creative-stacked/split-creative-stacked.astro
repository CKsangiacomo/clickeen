---
import CuratedInstanceEmbed from '../../components/CuratedInstanceEmbed.astro';

type Props = {
  headline: string;
  subheadline?: string;
  primaryCta: { label: string; href: string };
  secondaryCta?: { label: string; href: string };
  curatedRef?: {
    publicId: string;
    locale: string;
    title?: string;
  };
};

const { headline, subheadline, primaryCta, secondaryCta, curatedRef } = Astro.props;
---

<section class="ck-canvas ck-splitCreative">
  <div class="ck-inline ck-stack ck-splitCreative__stack">
    <div class="ck-stack ck-splitCreative__copy">
      <div class="display-3 ck-splitCreative__title">{headline}</div>
      {subheadline ? <p class="body-website ck-m0 ck-splitCreative__sub">{subheadline}</p> : null}

      <div class="ck-row ck-splitCreative__ctaRow">
        <a class="ck-btn ck-btn--primary ck-btn--lg label-l" href={primaryCta.href}>{primaryCta.label}</a>
        {secondaryCta ? <a class="ck-btn ck-btn--secondary ck-btn--lg label-l" href={secondaryCta.href}>{secondaryCta.label}</a> : null}
      </div>
    </div>

    <div class="ck-splitCreative__visual" aria-hidden="true">
      {curatedRef ? (
          <CuratedInstanceEmbed
            publicId={curatedRef.publicId}
            locale={curatedRef.locale}
            title={curatedRef.title ?? 'Widget preview'}
          />
      ) : (
        <div class="ck-media ck-splitCreative__stub">Missing curatedRef.publicId</div>
      )}
    </div>
  </div>
</section>

<style>
  .ck-splitCreative {
    background: var(--color-system-white);
  }

  .ck-splitCreative__stack {
    gap: var(--space-9);
  }

  .ck-splitCreative__title {
    margin: 0;
    letter-spacing: -0.02em;
  }

  .ck-splitCreative__sub {
    margin: 0;
  }

  .ck-splitCreative__copy {
    gap: var(--space-5);
    max-width: 920px;
  }

  .ck-splitCreative__ctaRow {
    gap: var(--space-3);
  }

  .ck-splitCreative__stub {
    width: 100%;
    min-height: 280px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: color-mix(in oklab, var(--color-system-black), transparent 56%);
  }
</style>

