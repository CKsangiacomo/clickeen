---
type Props = {
  title?: string;
  items: { title: string; body?: string }[];
};

const { title = 'Templates', items } = Astro.props;
---

<section class="ck-canvas">
  <div class="ck-inline ck-stack">
    <div class="heading-3">{title}</div>
    <div class="ck-row ck-templatesGrid__row">
      {items.map((item) => (
        <article class="ck-card ck-templatesGrid__card">
          <div class="ck-templatesGrid__thumb" aria-hidden="true" />
          <div class="ck-stack ck-templatesGrid__cardInner">
            <div class="label-l">{item.title}</div>
            {item.body ? (
              <div class="body-s ck-templatesGrid__body">{item.body}</div>
            ) : null}
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .ck-templatesGrid__row {
    align-items: stretch;
    gap: var(--space-4);
  }

  .ck-templatesGrid__card {
    flex: 1 1 0;
    min-width: 260px;
    overflow: hidden;
  }

  .ck-templatesGrid__thumb {
    height: 160px;
    background: var(--color-system-gray-6);
  }

  .ck-templatesGrid__cardInner {
    padding: var(--space-6);
    gap: var(--space-2);
  }

  .ck-templatesGrid__body {
    color: color-mix(in oklab, var(--color-system-black), transparent 45%);
  }
</style>

