---
import WebsiteCreativeEmbed from '../site/WebsiteCreativeEmbed.astro';

type Props = {
  headline: string;
  subheadline?: string;
  primaryCta: { label: string; href: string };
  secondaryCta?: { label: string; href: string };
  // Contract-locked: the hero preview (when enabled) is ALWAYS the website creative for:
  //   wgt_web_{widgetType}.overview.hero
  // This is not a generic slot and cannot visualize arbitrary content.
  websiteCreative?: {
    widgetType: string;
    locale: string;
    height?: string;
    title?: string;
  };
};

const { headline, subheadline, primaryCta, secondaryCta, websiteCreative } = Astro.props;
---

<section class="ck-canvas ck-heroCanvas">
  <div class="ck-inline">
    <div class="ck-split ck-split--center ck-split--hero">
      <div class="ck-split__a ck-stack">
        <h1 class="display-2 ck-hero__title">{headline}</h1>
        {subheadline ? (
          <p class="body-xxl ck-hero__subheadline ck-text-muted">
            {subheadline}
          </p>
        ) : null}
        <div class="ck-row">
          <a class="ck-btn ck-btn--primary ck-btn--lg label-l" href={primaryCta.href}>{primaryCta.label}</a>
          {secondaryCta ? (
            <a class="ck-btn ck-btn--secondary ck-btn--lg label-l" href={secondaryCta.href}>{secondaryCta.label}</a>
          ) : null}
        </div>
      </div>
      <div class="ck-split__b" aria-hidden="true">
        {websiteCreative ? (
          <WebsiteCreativeEmbed
            widgetType={websiteCreative.widgetType}
            page="overview"
            blockId="hero"
            locale={websiteCreative.locale}
            height={websiteCreative.height ?? '360px'}
            title={websiteCreative.title ?? 'Widget preview'}
          />
        ) : (
          <div class="ck-media ck-heroPreview">Live widget preview (stub)</div>
        )}
      </div>
    </div>
  </div>
</section>

<style>
  .ck-heroCanvas {
    background: var(--color-system-brown-5);
  }

  .ck-hero__title { margin: 0; }
  .ck-hero__subheadline { margin: 0; }

  .ck-heroPreview {
    width: 100%;
    min-height: 280px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: color-mix(in oklab, var(--color-system-black), transparent 56%);
  }

  @media (max-width: 900px) {
    .ck-heroPreview { min-height: 220px; }
  }
</style>
