---
type Props = {
  title?: string;
  stats: { value: string; label: string }[];
};

const { title, stats } = Astro.props;
---

<section class="ck-canvas ck-stats">
  <div class="ck-inline">
    {title ? <div class="heading-3 ck-stats__title">{title}</div> : null}
    <div class="ck-row ck-stats__row">
      {stats.map((s) => (
        <div class="ck-stack ck-stats__item">
          <div class="heading-3">{s.value}</div>
          <div class="caption">{s.label}</div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .ck-stats { padding-block: var(--space-8); }

  .ck-stats__title { margin-bottom: var(--space-5); }

  .ck-stats__row {
    justify-content: space-between;
    gap: var(--space-6);
  }

  .ck-stats__item { gap: var(--space-1); }
</style>
