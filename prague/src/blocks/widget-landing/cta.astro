---
type Props = {
  headline: string;
  subheadline?: string;
  primaryLabel: string;
  primaryHref: string;
};

const { headline, subheadline, primaryLabel, primaryHref } = Astro.props;
---

<section class="ck-canvas">
  <div class="ck-inline">
    <div class="ck-card">
      <div class="ck-split ck-split--center" style="padding: var(--space-8); gap: var(--space-8);">
        <div class="ck-split__a ck-stack" style="gap: var(--space-2);">
          <div class="heading-2">{headline}</div>
          {subheadline ? <div class="body-m" style="color: color-mix(in oklab, var(--color-system-black), transparent 45%);">{subheadline}</div> : null}
        </div>
        <div class="ck-split__b" style="flex: 0 0 auto;">
          <a class="ck-btn ck-btn--primary" href={primaryHref}>{primaryLabel}</a>
        </div>
      </div>
    </div>
  </div>
</section>
