---
type Props = {
  headline: string;
  subheadline?: string;
  primaryLabel: string;
  primaryHref: string;
};

const { headline, subheadline, primaryLabel, primaryHref } = Astro.props;
---

<section class="ck-canvas">
  <div class="ck-inline">
    <div class="ck-card">
      <div class="ck-split ck-split--center ck-cta__wrap">
        <div class="ck-split__a ck-stack ck-cta__copy">
          <div class="heading-2">{headline}</div>
          {subheadline ? <div class="body-xxl ck-cta__sub ck-text-subtle">{subheadline}</div> : null}
        </div>
        <div class="ck-split__b ck-cta__cta">
          <a class="ck-btn ck-btn--primary ck-btn--lg label-l" href={primaryHref}>{primaryLabel}</a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .ck-cta__wrap {
    padding: var(--space-8);
    gap: var(--space-8);
  }

  .ck-cta__copy { gap: var(--space-2); }

  .ck-cta__sub { }

  .ck-cta__cta { flex: 0 0 auto; }
</style>
