---
type Props = {
  title?: string;
  items: { title: string; body?: string }[];
};

const { title = 'Features', items } = Astro.props;
---

<section class="ck-canvas">
  <div class="ck-inline ck-stack">
    <div class="heading-3">{title}</div>
    <div class="ck-row ck-features__row">
      {items.map((item) => (
        <div class="ck-card ck-features__card">
          <div class="ck-stack ck-features__cardInner">
            <div class="label-l">{item.title}</div>
            {item.body ? (
              <div class="body-s ck-features__body ck-text-subtle">{item.body}</div>
            ) : null}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .ck-features__row {
    align-items: stretch;
    gap: var(--space-4);
  }

  .ck-features__card {
    flex: 1 1 0;
    min-width: 260px;
  }

  .ck-features__cardInner {
    padding: var(--space-6);
    gap: var(--space-2);
  }

  .ck-features__body { }
</style>
