{
  "component": "choice-tiles",
  "description": "Two/three option tile picker built from Dieter buttons and a bound hidden input.",
  "syntax": "<tooldrawer-field type='choice-tiles' size='{{SIZE}}' path='{{PATH}}' label='{{LABEL}}' options='{{OPTIONS}}' value='{{VALUE}}' />",
  "attributes": {
    "size": { "enum": ["sm", "md", "lg"], "default": "md" },
    "path": { "optional": true },
    "label": { "optional": true },
    "value": { "optional": true },
    "options": { "optional": false }
  },
  "binding": { "path": "instanceData[PATH]", "type": "string" },
  "defaults": [
    {
      "id": "choice-tiles",
      "sizes": ["sm", "md", "lg"],
      "spec": ["diet-choice-tiles", "data-size='{{size}}'"],
      "context": {
        "size": "md",
        "id": "choice-tiles-{{size}}",
        "label": "Layout",
        "value": "accordion",
        "path": "",
        "bodyClass": "body-s",
        "options": [
          { "label": "Accordion", "value": "accordion", "icon": "circle.grid.2x2", "selected": true },
          { "label": "List", "value": "list", "icon": "circle.grid.2x2" },
          { "label": "Multicolumn", "value": "multicolumn", "icon": "circle.grid.2x2" }
        ]
      },
      "sizeContext": {
        "sm": { "bodyClass": "body-xs" },
        "md": { "bodyClass": "body-s" },
        "lg": { "bodyClass": "body-m" }
      }
    }
  ]
}
