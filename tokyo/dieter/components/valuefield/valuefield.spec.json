{
  "component": "valuefield",
  "syntax": "<tooldrawer-field type='valuefield' size='{{SIZE}}' path='{{PATH}}' label='{{LABEL}}' value='{{VALUE}}' min='{{MIN}}' max='{{MAX}}' step='{{STEP}}' />",
  "attributes": {
    "size": { "enum": ["sm", "md", "lg"], "default": "md" },
    "path": { "optional": true },
    "label": { "optional": true },
    "value": { "optional": true },
    "min": { "optional": true },
    "max": { "optional": true },
    "step": { "optional": true },
    "show-if": { "optional": true },
    "show-when": { "optional": true }
  },
  "binding": { "path": "instanceData[PATH]", "type": "number" },
  "defaults": [
    {
      "id": "valuefield",
      "sizes": ["sm", "md", "lg"],
      "spec": ["diet-valuefield", "data-size='{{size}}'"],
      "context": {
        "size": "md",
        "id": "valuefield-{{size}}",
        "label": "Label",
        "value": "0",
        "path": "",
        "min": "",
        "max": "",
        "step": ""
      }
    }
  ]
}
