{
  "component": "textfield",
  "syntax": "<tooldrawer-field type='textfield' size='{{SIZE}}' databinding='{{DATABINDING}}' label='{{LABEL}}' hint='{{HINT}}' value='{{VALUE}}' />",
  "attributes": {
    "size": { "enum": ["sm", "md", "lg"], "default": "md" },
    "databinding": { "required": true },
    "label": { "optional": true },
    "hint": { "optional": true },
    "value": { "optional": true },
    "show-if": { "optional": true },
    "show-when": { "optional": true }
  },
  "binding": { "databinding": "instanceData[DATABINDING]", "type": "string" },
  "defaults": [
    {
      "id": "textfield",
      "sizes": ["sm", "md", "lg"],
      "spec": ["diet-textfield", "data-size='{{size}}'"],
      "context": {
        "size": "md",
        "id": "textfield-{{size}}",
        "label": "Label",
        "hint": "Hint text",
        "value": "",
        "databinding": ""
      }
    }
  ]
}
