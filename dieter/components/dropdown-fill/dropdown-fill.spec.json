{
  "component": "dropdown-fill",
  "syntax": "<tooldrawer-field type='dropdown-fill' size='{{SIZE}}' path='{{PATH}}' label='{{LABEL}}' placeholder='{{PLACEHOLDER}}' value='{{VALUE}}' fillModes='{{FILL_MODES}}' allowImage='{{ALLOW_IMAGE}}' />",
  "attributes": {
    "size": { "enum": ["sm", "md", "lg"], "default": "md" },
    "path": { "optional": true },
    "label": { "optional": true },
    "headerLabel": { "optional": true },
    "headerIcon": { "optional": true },
    "placeholder": { "optional": true, "default": "Select a fill" },
    "value": { "optional": true },
    "allowImage": { "optional": true },
    "fillModes": { "optional": true }
  },
  "binding": { "path": "instanceData[PATH]", "type": "string" },
  "defaults": [
    {
      "id": "dropdown-fill",
      "sizes": ["sm", "md", "lg"],
      "spec": ["diet-dropdown-fill", "data-size='{{size}}'"],
      "context": {
        "size": "md",
        "id": "dropdown-fill-{{size}}",
        "label": "Label",
        "placeholder": "Select a fill",
        "value": "",
        "path": "",
        "allowImage": true,
        "fillModes": "color,gradient,image",
        "popoverLabel": "Fill options",
        "labelClass": "label-s",
        "bodyClass": "body-s",
        "headerLabel": "Label",
        "headerIcon": "textformat.size.larger",
        "headerLabelClass": "label-s"
      },
      "sizeContext": {
        "sm": { "labelClass": "label-xs", "bodyClass": "body-xs" },
        "md": { "labelClass": "label-s", "bodyClass": "body-s" },
        "lg": { "labelClass": "label-m", "bodyClass": "body-m" }
      }
    }
  ]
}
