{
  "component": "dropdown-upload",
  "syntax": "<tooldrawer-field type='dropdown-upload' size='{{SIZE}}' path='{{PATH}}' meta-path='{{META_PATH}}' label='{{LABEL}}' placeholder='{{PLACEHOLDER}}' value='{{VALUE}}' accept='{{ACCEPT}}' maxImageKb='{{MAX_IMAGE_KB}}' maxVideoKb='{{MAX_VIDEO_KB}}' maxOtherKb='{{MAX_OTHER_KB}}' grantUrl='{{GRANT_URL}}' resolveUrl='{{RESOLVE_URL}}' template='{{TEMPLATE}}' />",
  "attributes": {
    "size": { "enum": ["sm", "md", "lg"], "default": "md" },
    "path": { "optional": true },
    "meta-path": { "optional": true },
    "label": { "optional": true },
    "headerLabel": { "optional": true },
    "placeholder": { "optional": true, "default": "Upload file" },
    "value": { "optional": true },
    "accept": {
      "optional": true,
      "default": "image/*,video/*,.svg,.lottie,application/json,application/pdf,.xlsx,.xls,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,application/vnd.ms-excel"
    },
    "maxImageKb": { "optional": true, "type": "number", "default": 512 },
    "maxVideoKb": { "optional": true, "type": "number", "default": 1536 },
    "maxOtherKb": { "optional": true, "type": "number", "default": 1536 },
    "grantUrl": { "optional": true, "default": "/api/assets/grant" },
    "resolveUrl": { "optional": true, "default": "/api/assets/resolve" },
    "template": { "optional": true }
  },
  "binding": { "path": "instanceData[PATH]", "type": "string" },
  "defaults": [
    {
      "id": "dropdown-upload",
      "sizes": ["sm", "md", "lg"],
      "spec": ["diet-dropdown-upload", "data-size='{{size}}'"],
      "context": {
        "size": "md",
        "id": "dropdown-upload-{{size}}",
        "label": "File",
        "placeholder": "Upload file",
        "value": "",
        "path": "",
        "metaPath": "",
        "popoverLabel": "File upload",
        "labelClass": "label-s",
        "bodyClass": "body-s",
        "headerLabel": "File",
        "headerLabelClass": "label-s",
        "accept": "image/*,video/*,.svg,.lottie,application/json,application/pdf,.xlsx,.xls,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,application/vnd.ms-excel",
        "maxImageKb": 512,
        "maxVideoKb": 1536,
        "maxOtherKb": 1536,
        "grantUrl": "/api/assets/grant",
        "resolveUrl": "/api/assets/resolve",
        "template": ""
      },
      "sizeContext": {
        "sm": { "labelClass": "label-xs", "bodyClass": "body-xs" },
        "md": { "labelClass": "label-s", "bodyClass": "body-s" },
        "lg": { "labelClass": "label-m", "bodyClass": "body-m" }
      }
    }
  ]
}
