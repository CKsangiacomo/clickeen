{
  "name": "clickeen",
  "private": true,
  "version": "1.0.0",
  "packageManager": "pnpm@10.15.1",
  "workspaces": [
    "admin",
    "bob",
    "dieter",
    "paris",
    "pitch",
    "prague",
    "sanfrancisco",
    "tokyo-worker",
    "venice"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build:i18n": "node scripts/i18n/build.mjs && node scripts/i18n/validate.mjs",
    "build:l10n": "node scripts/l10n/build.mjs && node scripts/l10n/validate.mjs",
    "build": "pnpm build:i18n && pnpm build:l10n && turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "test:contracts": "node scripts/verify-contracts.mjs",
    "test:layer-pipeline": "node scripts/verify-layer-pipeline.mjs",
    "typecheck": "turbo typecheck",
    "e2e": "turbo run e2e",
    "compile:widgets": "node scripts/compile-all-widgets.mjs",
    "smoke:ai": "node scripts/smoke-ai.mjs",
    "eval:copilot": "node scripts/eval-copilot.mjs",
    "dev:bob": "pnpm --filter @clickeen/bob dev",
    "dev:admin": "pnpm --filter @clickeen/devstudio dev",
    "dev:paris": "pnpm --filter @clickeen/paris dev",
    "dev:prague": "pnpm --filter @clickeen/prague dev",
    "dev:sanfrancisco": "pnpm --filter @clickeen/sanfrancisco dev",
    "dev:venice": "pnpm --filter @clickeen/venice dev",
    "build:bob": "pnpm --filter @clickeen/bob build",
    "build:admin": "pnpm --filter @clickeen/devstudio build",
    "build:dieter": "pnpm --filter @ck/dieter build",
    "build:prague": "pnpm --filter @clickeen/prague build",
    "prague:localize": "node scripts/prague-l10n/translate.mjs",
    "prague:l10n:translate": "node scripts/prague-l10n/translate.mjs",
    "prague:l10n:verify": "node scripts/prague-l10n/verify.mjs",
    "prague:l10n:watch": "node scripts/prague-l10n/watch.mjs",
    "prague:strings:translate": "node scripts/prague-l10n/translate.mjs",
    "prague:strings:compile": "node scripts/prague-l10n/verify.mjs",
    "prague:strings:watch": "node scripts/prague-l10n/watch.mjs",
    "build:prague:global": "pnpm prague:l10n:translate && pnpm prague:l10n:verify && pnpm build:prague",
    "migrate-prague-blocks": "node scripts/prague-blocks/migrate.mjs",
    "validate-prague-migration": "node scripts/prague-blocks/validate.mjs",
    "diff-prague-blocks": "node scripts/prague-blocks/diff.mjs",
    "prague:blocks:migrate": "node scripts/prague-blocks/migrate.mjs",
    "prague:blocks:validate": "node scripts/prague-blocks/validate.mjs",
    "prague:blocks:diff": "node scripts/prague-blocks/diff.mjs",
    "prague:sync": "node scripts/prague-sync.mjs"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "esbuild": "^0.21.5",
    "eslint": "^9.5.0",
    "eslint-config-next": "15.5.2",
    "glob": "^10.3.10",
    "prettier": "^3.3.2",
    "turbo": "^2.0.6",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "pg": "^8.16.3"
  }
}
