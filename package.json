{
  "name": "clickeen",
  "private": true,
  "version": "1.0.0",
  "packageManager": "pnpm@10.15.1",
  "workspaces": [
    "admin",
    "berlin",
    "bob",
    "dieter",
    "paris",
    "pitch",
    "prague",
    "roma",
    "sanfrancisco",
    "tokyo-worker",
    "venice"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build:i18n": "node scripts/i18n/build.mjs && node scripts/i18n/validate.mjs",
    "build:l10n": "node scripts/l10n/build.mjs && node scripts/l10n/validate.mjs",
    "gate:l10n": "node scripts/l10n/convergence-gate.mjs",
    "build": "pnpm build:i18n && pnpm build:l10n && turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "test:contracts": "node scripts/verify-contracts.mjs",
    "test:bootstrap-parity": "node scripts/ci/check-bootstrap-parity.mjs --env local",
    "test:bootstrap-parity:cloud-dev": "node scripts/ci/check-bootstrap-parity.mjs --env cloud-dev",
    "test:paris-boundary": "node scripts/ci/check-paris-boundary.mjs",
    "test:bob-bootstrap-boundary": "node scripts/ci/check-bob-bootstrap-boundary.mjs",
    "test:runtime-parity": "node scripts/ci/runtime-parity/index.mjs --env local --mode auth",
    "test:runtime-parity:auth": "node scripts/ci/runtime-parity/index.mjs --env local --mode auth",
    "test:runtime-parity:public": "node scripts/ci/runtime-parity/index.mjs --env local --mode public",
    "test:runtime-parity:cloud-dev": "node scripts/ci/runtime-parity/index.mjs --env cloud-dev --mode auth",
    "test:runtime-parity:cloud-dev:auth": "node scripts/ci/runtime-parity/index.mjs --env cloud-dev --mode auth",
    "test:runtime-parity:cloud-dev:public": "node scripts/ci/runtime-parity/index.mjs --env cloud-dev --mode public",
    "test:runtime-parity:cross-env": "node scripts/ci/runtime-parity/index.mjs --env local --mode auth --json-out artifacts/runtime-parity-local-auth.json && node scripts/ci/runtime-parity/index.mjs --env cloud-dev --mode auth --compare artifacts/runtime-parity-local-auth.json --json-out artifacts/runtime-parity-cloud-vs-local-auth.json && node scripts/ci/runtime-parity/index.mjs --env local --mode public --json-out artifacts/runtime-parity-local-public.json && node scripts/ci/runtime-parity/index.mjs --env cloud-dev --mode public --compare artifacts/runtime-parity-local-public.json --json-out artifacts/runtime-parity-cloud-vs-local-public.json",
    "test:api-loc": "node scripts/ci/check-api-code-loc.mjs --max-code-loc 800",
    "test:layer-pipeline": "node scripts/verify-layer-pipeline.mjs",
    "typecheck": "turbo typecheck",
    "tokyo:fonts:sync:local": "node scripts/tokyo-fonts-sync.mjs --local",
    "tokyo:fonts:sync:remote": "node scripts/tokyo-fonts-sync.mjs --remote",
    "e2e": "turbo run e2e",
    "compile:widgets": "node scripts/compile-all-widgets.mjs",
    "smoke:ai": "node scripts/smoke-ai.mjs",
    "smoke:prague-copy": "node scripts/smoke-prague-copy.mjs",
    "eval:copilot": "node scripts/eval-copilot.mjs",
    "dev:bob": "pnpm --filter @clickeen/bob dev",
    "dev:admin": "pnpm --filter @clickeen/devstudio dev",
    "dev:berlin": "pnpm --filter @clickeen/berlin dev",
    "dev:paris": "pnpm --filter @clickeen/paris dev",
    "dev:prague": "pnpm --filter @clickeen/prague dev",
    "dev:roma": "pnpm --filter @clickeen/roma dev",
    "dev:sanfrancisco": "pnpm --filter @clickeen/sanfrancisco dev",
    "dev:venice": "pnpm --filter @clickeen/venice dev",
    "build:bob": "pnpm --filter @clickeen/bob build",
    "build:admin": "pnpm --filter @clickeen/devstudio build",
    "build:dieter": "pnpm --filter @ck/dieter build",
    "build:prague": "pnpm --filter @clickeen/prague build",
    "build:roma": "pnpm --filter @clickeen/roma build",
    "prague:l10n:translate": "node scripts/prague-l10n/translate.mjs",
    "prague:l10n:verify": "node scripts/prague-l10n/verify.mjs",
    "build:prague:global": "pnpm prague:l10n:translate && pnpm prague:l10n:verify && pnpm build:prague",
    "prague:blocks:validate": "node scripts/prague-blocks/validate.mjs",
    "prague:sync": "node scripts/prague-sync.mjs --publish --local"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "esbuild": "^0.21.5",
    "eslint": "^9.5.0",
    "eslint-config-next": "15.5.2",
    "glob": "^10.3.10",
    "prettier": "^3.3.2",
    "turbo": "^2.0.6",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "pg": "^8.16.3"
  }
}
